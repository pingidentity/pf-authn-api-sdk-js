<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo"/>
  </div>
  {{> errors}}
  {{> spinner}}
  <form class="form" id="AuthnWidgetForm">
    {{#ifEq authenticator "TOKENPUSH"}}
      {{#ifEq tokenPushMutualChallenge null}}
        <div class="heading-text">
          <div class="text-block__text">Confirm the authentication request displayed on your Entrust Mobile Soft Token
            Application.
          </div>
        </div>
        <div class="spinner spinner--margin-bottom-small">
          <div class="spinner__icon" data-id="spinner"></div>
        </div>
        <div class="text-block--overflow-wrap" id="pushnotificationmessage">
          Approve Push Notification, then click Submit
        </div>
      {{else}}
        <div class="heading-text">
          <div class="text-block__text">Confirm the authentication request and select the following code in your Entrust Mobile Soft Token Application.
          </div>
        </div>
        <br>
        <br>
         <h1 class="heading-text centered-text icon-heading"  style="font-weight:bold;">
          {{tokenPushMutualChallenge}}
        </h1>
        <br>
        <br>
        <div class="text-block--overflow-wrap" id="pushnotificationmessage">
          Approve Push Notification, then click Submit
        </div>
      {{/ifEq}}

    {{else ifEq authenticator "SMARTCREDENTIALPUSH"}}
      <div class="heading-text">
        <div class="text-block__text">
          Confirm the authentication request displayed on your Entrust Mobile Smart Credential Application.
        </div>
      </div>
      <div class="spinner spinner--margin-bottom-small">
        <div class="spinner__icon" data-id="spinner"></div>
      </div>
      <div class="text-block--overflow-wrap" id="pushnotificationmessage">
        Approve Challenge, then click Submit
      </div>
    {{else ifEq authenticator "KBA"}}
      <div class="heading-text">
        <div class="text-block__text">Enter answers to your questions.</div>
      </div>
      {{#each kbaChallenge.userQuestions as |kbaQuestion|}}
        <div class="float-label" id="kbaFields">
          <label class="label-text" for="{{kbaQuestion.id}}">{{kbaQuestion.question}}</label>
          <input type="text" class="text-input float-label__input required"
                 placeholder="Answer" name="kbaAnswer" id="{{kbaQuestion.id}}" value="" required/>
        </div>
      {{/each}}
    {{else ifEq authenticator "GRID"}}
      <div class="heading-text">
        <div class="text-block__text">Enter the response to the Grid Card challenge.</div>
      </div>
      {{#each gridChallenge.serialNumbers as |serialNumber|}}
        <div class="text-block--overflow-wrap">
          Serial number of grid cards that can be used
          <div class="text-text-block--overflow-wrap">{{serialNumber}}</div>
        </div>
      {{/each}}
      <div class="entrust__grid">
        {{#each gridChallenge.cells as |cell|}}
          <div class="entrust__grid-item">
            {{cell}}
          </div>
        {{/each}}
      </div>
    {{else ifEq authenticator "EMAIL OTP"}}
      <div class="heading-text">
        <div class="text-block__text">Enter the one-time password that was just sent to you.</div>
      </div>
    {{else ifEq authenticator "SMS OTP"}}
      <div class="heading-text">
        <div class="text-block__text">Enter the one-time password that was just sent to you.</div>
      </div>
    {{else ifEq authenticator "VOICE OTP"}}
      <div class="heading-text">
        <div class="text-block__text">Enter the one-time password that was just sent to you.</div>
      </div>
    {{else ifEq authenticator "TOKEN"}}
      <div class="heading-text">
        <div class="text-block__text">Enter the one-time password generated by your token to complete the login.</div>
      </div>
    {{else ifEq authenticator "TEMP_ACCESS_CODE"}}
      <div class="heading-text">
        <div class="text-block__text">Enter your temporary access code.</div>
      </div>
    {{/ifEq}}

  {{#ifNotEq authenticator "KBA"}}
    <div class="float-label" id="passcodefield">
      <input type="text" class="text-input float-label__input required" name="input" id="passcode"/>
      {{#ifEq authenticator "EMAIL OTP"}}
        <label class="float-label__label" for="passcode">Enter OTP</label>
      {{else ifEq authenticator "SMS OTP"}}
        <label class="float-label__label" for="passcode">Enter OTP</label>
      {{else ifEq authenticator "VOICE OTP"}}
        <label class="float-label__label" for="passcode">Enter OTP</label>
      {{else ifEq authenticator "TOKEN"}}
        <label class="float-label__label" for="passcode">Enter Token Code</label>
      {{else ifEq authenticator "TEMP_ACCESS_CODE"}}
        <label class="float-label__label" for="passcode">Enter Temporary Access Code</label>
      {{else ifEq authenticator "GRID"}}
        <label class="float-label__label" for="passcode">{{gridChallenge.cells}}</label>
      {{else}}
        <label class="float-label__label" for="passcode">Enter passcode</label>
      {{/ifEq}}
    </div>
  {{/ifNotEq}}

    <button id="submit" data-checkInput="checkInput" type="submit" class="button button--primary brand-primary-bg"
            disabled>
      Submit
    </button>
    <div class="text-block">
      <div class="text-block--overflow-wrap">
        <a tabindex="0" data-actionId="showAlternativeAuthentication" target="_self" class="anchor">
          Alternative Authentication</a>
      </div>
      <div class="text-block--overflow-wrap">
        {{#ifEq authenticator "EMAIL OTP"}}
          <a tabindex="0" data-actionId="resendAuthenticationRequest" target="_self" class="anchor">
            Resend Authentication Request</a>
        {{else ifEq authenticator "SMS OTP"}}
          <a tabindex="0" data-actionId="resendAuthenticationRequest" target="_self" class="anchor">
            Resend Authentication Request</a>
        {{else ifEq authenticator "VOICE OTP"}}
          <a tabindex="0" data-actionId="resendAuthenticationRequest" target="_self" class="anchor">
            Resend Authentication Request</a>
        {{else ifEq authenticator "SMARTCREDENTIALPUSH"}}
          <a tabindex="0" data-actionId="resendAuthenticationRequest" target="_self" class="anchor">
            Resend Authentication Request</a>
        {{else ifEq authenticator "TOKENPUSH"}}
          <a tabindex="0" data-actionId="resendAuthenticationRequest" target="_self" class="anchor">
            Resend Authentication Request</a>
        {{/ifEq}}
      </div>
      <div class="text-block--overflow-wrap">
        <a tabindex="0" data-actionId="cancel" target="_self" class="anchor">Cancel</a>
      </div>
    </div>
  </form>
</div>