{{#if failedValidators}}
  <div class="tooltip">
    <h4 class="heading heading--4">Password Requirements:</h4>
    <div class="requirements">
      {{#if satisfiedValidators}}
        {{#each satisfiedValidators}}
          <div class="requirement">
            <span class="requirement__icon pingicon-success-round requirement__icon--success"></span>
            <span class="requirement__name">{{this}}</span>
          </div>
        {{/each}}
      {{/if}}
      {{#each failedValidators}}
        <div class="requirement">
          <span class="requirement__icon pingicon-error-round requirement__icon--success"></span>
          <span class="requirement__name">{{this}}</span>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}