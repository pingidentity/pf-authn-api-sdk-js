<div class="card">
  {{> back_button}}
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo"/>
  </div>
  {{> errors}}
  {{> spinner_small_bot_margins}}
  <div class="icon-feedback icon-feedback--success" style="margin-bottom: 30px;">
    <p class="icon-feedback__label">Authenticating</p>
  </div>
  {{> device_selection_body bodyText='Request sent to:'}}
  {{#each devices as |device|}}
    {{#ifEq device.id ../selectedDeviceRef.id}}
      {{#if device.otpEnabled}}
        <div class="text-block" data-id="textblock" style="margin-top: 25px">
          <div class="text-block--overflow-wrap">
            <a id="usePasscode" data-id="change-button">Use passcode</a>
          </div>
        </div>
      {{/if}}
    {{/ifEq}}
  {{/each}}
</div>
